# Zap Pilot Environment Configuration
# Copy this file to .env.local and update the values

# Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token_here
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id_here

# Environment
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_VERCEL_URL=
NEXT_PUBLIC_VERCEL_ENV=

# API Configuration  
NEXT_PUBLIC_API_BASE_URL=https://api.zap-pilot.org
NEXT_PUBLIC_APP_URL=https://app.zap-pilot.org

# Social Media (for dynamic link updates)
NEXT_PUBLIC_TWITTER_HANDLE=zappilot
NEXT_PUBLIC_DISCORD_INVITE=zappilot
NEXT_PUBLIC_GITHUB_ORG=zap-pilot

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NEWSLETTER=true
NEXT_PUBLIC_ENABLE_CHAT_WIDGET=false

# Maintenance Mode
NEXT_PUBLIC_MAINTENANCE_MODE=false
NEXT_PUBLIC_MAINTENANCE_MESSAGE="We're currently updating our systems. Please check back soon!"